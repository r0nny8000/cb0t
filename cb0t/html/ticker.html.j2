{% extends "base.html.j2" %}
{% set active_page = "ticker" %}

{% block content %}

<div class="table-responsive">
    <table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>Asset</th>
            <th>Symbol</th>
            <th style="text-align: right;">Price</th>
            <th style="text-align: right;">Order min Volume</th>
            <th style="text-align: right;">Order min Price</th>
        </tr>
    </thead>
    <tbody>
        {% for key, value in ticker.items() %}
        <tr>
            <td>{{ assets[key]['wsname']|replace('XBT', 'BTC') }}</td>
            <td>{{ key }}</td>
            <td style="text-align: right;">{{ value['c'][0]|float|round(2) }}</td>
            <td style="text-align: right;">{{ "%.8f"|format(asset_pair[key]['ordermin']|float) }}</td>
            <td style="text-align: right;">{{ "%.2f"|format(asset_pair[key]['ordermin']|float * value['c'][0]|float) }}</td>
        </tr>
        {% endfor %}
    </tbody>
    </table>
</div>


{% endblock %}