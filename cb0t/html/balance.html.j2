{% extends "base.html.j2" %}
{% set active_page = "balance" %}

{% block content %}

<ul>
    {% for key, value in balance.items() %}
    {% if value|float %}
    <li>{{ key|replace('XXBT', 'BTC')|replace('XETH', 'ETH')|replace('ZEUR', 'EUR') }}: {{ value|float|round(8) }}</li>
    {% endif %}
    {% endfor %}
</ul>

{% endblock %}